@model List<Asset> 
<a href="/Assets/Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-lg"></i> Add Asset
</a>
<table id="Table"  class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Date</th>
            <th scope="col">Amount</th>
            <th scope="col">Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.AssetNumber</td>
                <td>@item.AssetName</td>
                <td class="text-center">@item.AssetDate.ToShortDateString()</td>
                <td class="text-end">@item.PurchaseValue.ToString("N2")</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.AssetId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.AssetId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete the Assets and its Journal Entries?');">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>