@model List<Assets.Models.AssetAddition>
@{
    ViewBag.Title = "";
}
<a href="/AssetAdditions/Create" class="btn btn-success mb-3">
	<i class="bi bi-plus-lg"></i> Add Asset Addition
</a>
<table id="Table" class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>Asset Name</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AssetName</td>
                <td>@item.AdditionDate.ToString("yyyy-MM-dd")</td>
                <td>@item.AdditionValue.ToString("N2")</td>
                <td>@item.Description</td>
                <td> 
                    <a asp-action="Edit" asp-route-id="@item.AdditionId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.AdditionId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete the Add Assets and its Journal Entries?');">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>