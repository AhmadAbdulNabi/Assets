@model Assets.Models.AssetAddition
@{
    ViewData["Title"] = "Edit Addition";
    var assets = ViewBag.Assets as List<Assets.Models.Asset> ?? new List<Assets.Models.Asset>();
}
<h3>@ViewData["Title"]</h3>
<form asp-action="Edit" method="post" class="mx-auto" style="max-width:600px;">
    <input type="hidden" asp-for="AdditionId" />
    <div class="form-group mb-3">
        <label asp-for="AssetId" class="form-label">Asset</label>
        <select asp-for="AssetId" class="form-select select2" asp-items="@(new SelectList(assets, "AssetId", "AssetName"))" required>
            <option value="">-- Select Asset --</option>
        </select>
        <span asp-validation-for="AssetId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="AdditionDate" class="form-label">Addition Date</label>
        <input asp-for="AdditionDate" type="date" class="form-control" />
        <span asp-validation-for="AdditionDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="AdditionValue" class="form-label">Addition Value</label>
        <input asp-for="AdditionValue" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="AdditionValue" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
