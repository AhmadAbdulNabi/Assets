@model List<Account>
<a href="/Accounts/Create" class="btn btn-success mb-3">
	<i class="bi bi-plus-lg"></i> Add Account
</a>
<table id="Table" class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th scope="col">No</th>
            <th scope="col">Account name </th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.AccountId</td>
                <td>@item.AccountName</td> 
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete the Account?');">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>